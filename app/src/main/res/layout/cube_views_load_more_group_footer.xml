<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cube_views_load_more_default_footer_text_view"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:textColor="@color/text_c"
        android:layout_centerInParent="true"
        android:gravity="center" />
    <LinearLayout
        android:id="@+id/ll_empty_view"
        android:orientation="vertical" android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@color/ob_color_white"
        android:visibility="gone"
        android:layout_height="450dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_talk"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_9"
            android:textSize="@dimen/text_two_eight"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还没有人评论哦！快来抢沙发吧!"/>
    </LinearLayout>
</RelativeLayout>